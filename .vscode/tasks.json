{
	// See https://go.microsoft.com/fwlink/?LinkId=733558 
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cargo: build",
			"type": "process",
			"command": "cargo",
			"args": [
				"build",
				"--features",
				"cuda_10_1"
			],
			"options": {"cwd": "cuda-macros-test"},
			"problemMatcher": ["$rustc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "cargo: test",
			"type": "process",
			"command": "cargo",
			"args": [
				"test",
				"--features",
				"cuda_10_1"
			],
			"options": {"cwd": "cuda-macros-test"},
			"problemMatcher": ["$rustc"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		}
	]
}
